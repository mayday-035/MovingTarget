<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.QuickFragment">

    <View
        android:id="@+id/timerEdtView"
        android:layout_width="462dp"
        android:layout_height="40dp"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:background="@drawable/text_view"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/timerEdt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:paddingHorizontal="@dimen/_10sdp"
        android:paddingTop="@dimen/_4sdp"
        android:text="0"
        android:textColor="@color/black"
        android:textSize="@dimen/_22ssp"
        app:layout_constraintBottom_toBottomOf="@+id/timerEdtView"
        app:layout_constraintEnd_toEndOf="@id/timerEdtView"
        app:layout_constraintTop_toTopOf="@id/timerEdtView" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/one"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginStart="200dp"
        android:backgroundTint="@color/Platinum"
        android:elevation="@dimen/_4sdp"
        android:fontFamily="@font/poppins_medium"
        android:text="1"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/_22ssp"
        app:cornerRadius="@dimen/_20sdp"
        app:layout_constraintStart_toStartOf="@id/timerEdtView"
        app:layout_constraintTop_toBottomOf="@id/timerEdtView" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/two"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginStart="30dp"
        android:backgroundTint="@color/Platinum"
        android:elevation="@dimen/_4sdp"
        android:fontFamily="@font/poppins_medium"
        android:gravity="center"
        android:text="2"
        android:textColor="@color/black"
        android:textSize="@dimen/_22ssp"
        app:cornerRadius="@dimen/_20sdp"
        app:layout_constraintStart_toEndOf="@id/one"
        app:layout_constraintTop_toBottomOf="@id/timerEdtView" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/three"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginStart="30dp"
        android:backgroundTint="@color/Platinum"
        android:elevation="@dimen/_4sdp"
        android:fontFamily="@font/poppins_medium"
        android:gravity="center"
        android:text="3"
        android:textColor="@color/black"
        android:textSize="@dimen/_22ssp"
        app:cornerRadius="@dimen/_20sdp"
        app:layout_constraintStart_toEndOf="@id/two"
        app:layout_constraintTop_toBottomOf="@id/timerEdtView" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/four"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:fontFamily="@font/poppins_medium"
        android:elevation="@dimen/_4sdp"
        android:backgroundTint="@color/Platinum"
        android:text="4"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/_22ssp"
        app:cornerRadius="@dimen/_20sdp"
        app:layout_constraintTop_toBottomOf="@id/one"
        app:layout_constraintStart_toStartOf="@id/one" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/five"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginStart="30dp"
        android:fontFamily="@font/poppins_medium"
        android:elevation="@dimen/_4sdp"
        android:backgroundTint="@color/Platinum"
        app:cornerRadius="@dimen/_20sdp"
        android:text="5"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/_22ssp"
        app:layout_constraintTop_toBottomOf="@id/two"
        app:layout_constraintStart_toEndOf="@id/four" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/six"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginStart="30dp"
        android:fontFamily="@font/poppins_medium"
        android:elevation="@dimen/_4sdp"
        android:backgroundTint="@color/Platinum"
        app:cornerRadius="@dimen/_20sdp"
        android:text="6"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/_22ssp"
        app:layout_constraintStart_toEndOf="@id/five"
        app:layout_constraintTop_toBottomOf="@id/three"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/seven"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:fontFamily="@font/poppins_medium"
        android:elevation="@dimen/_4sdp"
        android:backgroundTint="@color/Platinum"
        app:cornerRadius="@dimen/_20sdp"
        android:text="7"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/_22ssp"
        app:layout_constraintTop_toBottomOf="@id/four"
        app:layout_constraintStart_toStartOf="@id/four" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/eight"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginStart="30dp"
        android:fontFamily="@font/poppins_medium"
        android:elevation="@dimen/_4sdp"
        android:backgroundTint="@color/Platinum"
        app:cornerRadius="@dimen/_20sdp"
        android:text="8"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/_22ssp"
        app:layout_constraintTop_toBottomOf="@id/five"
        app:layout_constraintStart_toEndOf="@id/four" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/nine"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginStart="30dp"
        android:fontFamily="@font/poppins_medium"
        android:elevation="@dimen/_4sdp"
        android:backgroundTint="@color/Platinum"
        app:cornerRadius="@dimen/_20sdp"
        android:text="9"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/_22ssp"
        app:layout_constraintStart_toEndOf="@id/eight"
        app:layout_constraintTop_toBottomOf="@id/six"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/dot"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:fontFamily="@font/poppins_medium"
        android:elevation="@dimen/_4sdp"
        android:backgroundTint="@color/Platinum"
        app:cornerRadius="@dimen/_20sdp"
        android:text="."
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/_22ssp"
        app:layout_constraintTop_toBottomOf="@id/seven"
        app:layout_constraintStart_toStartOf="@id/seven"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/zero"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginStart="30dp"
        android:fontFamily="@font/poppins_medium"
        android:elevation="@dimen/_4sdp"
        android:backgroundTint="@color/Platinum"
        app:cornerRadius="@dimen/_20sdp"
        android:text="0"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/_22ssp"
        app:layout_constraintTop_toBottomOf="@id/eight"
        app:layout_constraintStart_toEndOf="@id/four" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/clear"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginStart="30dp"
        android:fontFamily="@font/poppins_medium"
        android:elevation="@dimen/_4sdp"
        android:backgroundTint="@color/Platinum"
        app:cornerRadius="@dimen/_20sdp"
        android:text="CL"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/_16ssp"
        app:layout_constraintStart_toEndOf="@id/eight"
        app:layout_constraintTop_toBottomOf="@id/nine"
         />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/startTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_40sdp"
        android:layout_marginTop="128dp"
        android:fontFamily="@font/poppins_medium"
        android:paddingHorizontal="@dimen/_40sdp"
        android:paddingVertical="@dimen/_7sdp"
        android:text="START"
        android:textColor="@color/black"
        android:textSize="@dimen/_12sdp"
        app:cornerRadius="@dimen/_7sdp"
        app:layout_constraintEnd_toStartOf="@id/four"
        app:layout_constraintTop_toBottomOf="@id/timerEdtView"
        app:strokeWidth="2dp" />

</androidx.constraintlayout.widget.ConstraintLayout>